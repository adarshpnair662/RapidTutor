<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle_curve_black"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:padding="20dp"
            android:gravity="center">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingBottom="50dp"
                android:text="Learn"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/learn_btn"
                style="@style/TittleTheme"
                android:background="@drawable/rectangle_cut_blue"></Button>

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                style="@style/TittleTheme"
                android:layout_alignParentBottom="true"
                android:paddingTop="50dp"
                android:id="@+id/teach_btn"
                android:textColor="@color/white"
                android:text="Teach"
                android:textSize="16sp"
                android:background="@drawable/rectangle_curve_rotate_cut"></Button>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:rotation="180"
            android:layout_weight="2"
            android:background="@drawable/rectangle_curve_black"></ImageView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>