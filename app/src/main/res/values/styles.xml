<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TittleTheme" >
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="HeadingText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubHeading" >
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RegularText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="NormalText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ParagraphText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="EditText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:background">@drawable/blac_rounded_box</item>
    </style>

    <style name="Linearlayout">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppDialogScreenTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/black_drak_box</item>
    </style>
</resources>
